<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BusReservationMaui.Views.HomeView">
    
    <ContentPage.Content>
        <Grid RowDefinitions=".15*, .15*, .15*, .55*">
            
            <RoundRectangle Grid.RowSpan="2" StyleClass="TopRectangle" />
            <VerticalStackLayout StyleClass="Header">
            </VerticalStackLayout>
            <Grid 
                Grid.Row="1"
                Grid.RowSpan="2"
                StyleClass="BalanceGrid">
              
                <RoundRectangle StyleClass="BalanceRectangle" Margin="0,-80,0,0"/>
                <Grid ColumnDefinitions="*,*"
                      RowDefinitions=".333*, .333*, .333*"
                      StyleClass="Padding25"></Grid>
                <VerticalStackLayout>
                    <Label Text=""></Label>
                </VerticalStackLayout>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>